{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/local-dev.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "deploy": "pnpm exec serverless deploy",
    "start:offline": "pnpm exec serverless offline --httpPort 3000",
    "seed": "ts-node --transpile-only src/scripts/seed.ts"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.1",
    "bson": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongodb": "^5.9.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/bcryptjs": "^3.0.0",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.7.9",
    "esbuild": "^0.27.2",
    "serverless": "^3.40.0",
    "serverless-esbuild": "^1.56.1",
    "serverless-offline": "^12.0.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
