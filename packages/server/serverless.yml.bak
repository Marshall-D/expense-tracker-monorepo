#  packages/server/serverless.yml
service: expense-tracker-api
frameworkVersion: "3"

provider:
  name: aws
  runtime: nodejs20.x
  region: us-east-1
  environment:
    MONGO_URI: ${env:MONGO_URI, ''}

functions:
  health:
    handler: packages/server/src/handlers/health.handler
    events:
      - httpApi:
          path: /api/health
          method: get
